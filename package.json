    "allure-commandline": "2.23.1",
    "allure-playwright": "2.4.0",
    "chai": "^4.3.7",
    "dotenv": "^16.3.1",
    "eslint": "8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-playwright": "0.15.3",
    "eslint-plugin-prettier": "5.0.0",
    "genson-js": "^0.0.8",
