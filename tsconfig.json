{
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "../tests-out",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "baseUrl": "./", // This must be specified if "paths" is.
    "paths": {
      "@myhelper/*": ["utils/*"] // This mapping is relative to "baseUrl".
    }
  }
}
